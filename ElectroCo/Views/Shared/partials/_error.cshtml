<div class="toast pull-right"  aria-live="assertive" aria-atomic="true" data-delay="5000">
    <div class="toast-header" style="background-color:#ff4c4c">
        <strong class="mr-auto">Error</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body" style="background-color:#ff9999">
        @TempData["error"];
    </div>
</div>